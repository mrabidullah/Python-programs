name=input('Enter your name :  ')


while True:
    p=input('Enter your password :  ')

    
    if len(p)<8:
        print('your password is to short ! Try again.')
    elif len(p)>16:
        print('your password is to long ! Try again.')
        continue
        
    upper=False
    lower=False
    digit=False
    special=False
    for i in p:
        if i.isupper():
            upper=True
        elif i.islower():
            lower=True
        elif i.isdigit():
            digit=True
        else:
            special=True
        if upper and lower and digit and special:
            print('Your password is strong.')
            print('your account is created successfully \n')
            print('welcome to ',name)
            break
    else:
        print("Password must contain:")
        print("Uppercase, lowercase, number and special character.")
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
