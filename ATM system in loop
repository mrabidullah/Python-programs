print('Welcome to AB ATM')
print('Create your account\n')

name = input('Enter your name: ')
password = input('Enter your password: ')
balance=100

print('Your account is created successfully\n')

while True:
    print('\n1. Add Deposit')
    print('2. Check Balance')
    print('3. Withdraw')
    print('4. Exit')

    pin = input('Enter your pin: ')   

    if pin != password:
        print('Your password is wrong! Try again.')
        continue
    else:
        print('Password correct!')

    choice = input('What do you want to do? ')

    if choice == '1':
        amount1 = float(input('Enter the amount you want to deposit: '))
        total = balance + amount1
        print('you are successfully deposited ,',amount1)
        
        print('Your new balance is', total)
        balance = total

    elif choice == '2':
        print('Your total balance is ', total)

    elif choice == '3':
        amount = float(input('Enter the amount you want to withdraw: '))
        
        if amount>total:
            print('You have insufficient balance')
        else:
            total -= amount
            print('Your new balance is', total)
            balance = total
            print('your are successfully withdraw ',amount)

    elif choice == '4':
        print('Thank you for using AB ATM')
        break

    else:
        print('Invalid choice. Try again.')
        
        
        
        
        
        
        
        
        
        
